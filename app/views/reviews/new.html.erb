<h3 class='text-center'> Add a review</h3>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <%= simple_form_for [ @kitchen, @review ] do |f| %>
          <%= f.input :content %>
          <%= f.input :rating %>
          <%= f.submit "Submit review" %>
        <% end %>
        <%= link_to 'Back', kitchen_path(@kitchen) %>
      </div>
    </div>
  </div>
