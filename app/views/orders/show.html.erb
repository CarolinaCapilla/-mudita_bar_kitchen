<div class="progress-section pattern-section no-top-padding">
  <div class="my-container w-container">
    <div class="cart-reservation w-form">
      <div class="progress">
        <ul>
            <li class="completed">
            <%= cl_image_tag("review.png_vblhbv.png") %><br>
            <i class="fas fa-check"></i>
            <p>Review your order</p>
            </li>
          <li id="payment" class="in-progress">
            <%= cl_image_tag("payment.png") %><br>
            <i id='payment-icon' class="fas fa-sync-alt"></i>
          <p>Payment</p>
          </li>
          <li id="enjoy">
          <%= cl_image_tag("enjoy.png") %><br>
          <i id="enjoyIcon" class="fas fa-times-circle"></i>
          <p>Enjoy</p>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="section pattern-section no-top-padding">
  <div class="wrapper w-container">
    <div class="cart-reservation w-form">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12">
            <h3 id="confirmation-title" class="text-center">Payment</h3>
            <div class="cart-container ">
            <table class="cart-table">
              <tr>
            <th class="cart-text">Items</th>
            <th class="cart-text">Quantity</th>
            <th class="cart-text text-right">Subtotal</th>
          </tr>
            <% @cart.line_items.each do |line_item| %>
            <tr>
              <td class="item-data">
                <div class="cart-info">
                  <% if line_item.item.photo.attached? %>
                    <%= cl_image_tag line_item.item.photo.key, class: "img-cart" %>
                  <% end %>
                  <div>
                    <h4 class="review-item-tag"><%= line_item.item.dish.capitalize %></h4>
          </div>
                </div>
              </td>
              <td class="item-data"><%= line_item.quantity %></td>
              <td class="item-data">£<%= line_item.total_price %></td>
            </tr>
          <% end %>
        </table>
        <div class="total-price">
          <table class="total-table">
            <tr>
              <td class="item-data">Subtotal</td>
              <td class="item-data">£<%= @cart.total_price %></td>
            </tr>
            <tr>
              <td class="item-data">VAT</td>
              <td class="item-data">£<%=  total = (@cart.total_price * 20) / 100 %></td>
            </tr>
              <tr>
              <td class="item-data">Total</td>
              <td class="item-data">£<%= total + @cart.total_price %></td>
            </tr>
          </table>
        </div>

            <%= current_user.first_name %>
            <%= current_user.last_name %>
            <div class="container mt-4">
            <h4>Delivery address:</h4>
            <%= current_user.address %>

          </div>
          </div>
        </div>
      </div>
      <div class="container d-flex justify-content-between mt-4">

      <%= link_to 'Edit Order', cart_path(@cart), class: 'main-button' %>
      <%= render 'shared/modal' %>
      </div>
    </div>
  </div>
</div>

</div>

