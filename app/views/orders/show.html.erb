<%# <h3>Order reference number <em>3X54TL</em></h3> %>
<div class="section pattern-section no-top-padding">
  <div class="wrapper w-container">
    <div class="reservation w-form">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12">
            <h3 class="text-center">Review your order</h3>
            <ul>
              <% @line_items.each do |line_item| %>
                <li>Dish: <%= line_item.item.dish %></li>
                <li>Quantity: <%= line_item.quantity %></li>
                <li>Item price: £<%= line_item.item.price %></li>
              <% end %>
              <br>

                Total quantity: <%= @line_items.map(&:quantity).sum %>
                <br>
                Subtotal: £<%= @cart.total_price %>
                <p>Total VAT: £<%=  total = (@cart.total_price * 20) / 100 %></p>
                Total price with VAT: £<%= total + @cart.total_price %>
            </ul>
            <%= current_user.first_name %>
            <%= current_user.last_name %>
            <h5>Delivery address:</h5>
            <%= current_user.address %>
            <h5>Order status:</h5> <%= @order.status %>
            <h5>ETA 15min</h5>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'shared/modal' %>
</div>
