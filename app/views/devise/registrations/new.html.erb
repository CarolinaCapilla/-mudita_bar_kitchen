<div class="section pattern-section no-top-padding">
  <div class="wrapper w-container">
    <div class="reservation w-form">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12">
            <h2 class="text-center">Sign up</h2>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>


              <div class="form-inputs">
                  <%= f.input :name,
                              input_html: { autocomplete: "name" }%>
                <% if params[:chef].present? %>
                  <%= f.hidden_field :chef, value: true %>
                  <%= f.input :description,
                              input_html: { autocomplete: "description" }%>
                <% end %>
                <% if !params[:chef].present? %>
                <%= f.input :address,
                            input_html: { autocomplete: "address" }%>
                <%= f.input :avatar, as: :file %>
                <% end %>
                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "email" }%>
                <%= f.input :password,
                            required: true,
                            hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                            input_html: { autocomplete: "new-password" } %>
                <%= f.input :password_confirmation,
                            required: true,
                            input_html: { autocomplete: "new-password" } %>
              </div>

        <div class="form-inputs">
            <%= f.input :first_name,
                        input_html: { autocomplete: "first_name" }%>
            <%= f.input :last_name,
                        input_html: { autocomplete: "last_name" }%>
          <% if params[:chef].present? %>
            <%= f.hidden_field :chef, value: true %>
            <%= f.input :description,
                        input_html: { autocomplete: "description" }%>
            <%= f.input :avatar, as: :file %>
          <% end %>
          <% if !params[:chef].present? %>
          <%= f.input :address,
                      input_html: { autocomplete: "address" }%>
          <% end %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>


              <div class="form-actions">
                <%= f.button :submit, "Sign up", class: 'main-button' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
