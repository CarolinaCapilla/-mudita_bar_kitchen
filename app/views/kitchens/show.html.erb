<div class="bg-section-kitchen page-hero-section menu-hero">
  <div class="wrapper w-container">
    <h1 class="page-hero-header"><%= @kitchen.name %></h1>
  </div>
</div>

<div class="item-section-kitchen-show">
  <div class="wrapper w-container">
    <div class="section-header-wrapper">
      <div class="sub-header">Menu</div>
      <h2>Starters</h2>
      <div class="divider"></div>
    </div>
    <div class="menu">
      <% @kitchen.items.starters.each do |item| %>
      <div class="menu-grid-item">
          <div class="menu-grid-card">
            <div class="menu-grid-image">
              <%= cl_image_tag item.photo.key %>
            </div>
            <% if current_user == @kitchen.user %>
            <% end %>
            <%= button_to 'Add to cart', line_items_path(item_id: item.id), class: 'cart-button' %>
            <div class="menu-info w-clearfix">
              <div class="menu-info-main">
                <div class="menu-name"><%= item.dish %></div>
                <div class="menu-dots-line"></div>
                <div class="menu-price">
                  <div>£</div>
                  <div><%= item.price %></div>
                </div>
              </div>
              <div class="menu-ingredients">
                <%= item.description %>
              </div>
              <div class="menu-more w-clearfix">
                <div class="badge menu-item-tooltip">
                  <%= item.allergen %>
                </div>
              </div>
            </div>

              <% if current_user == @kitchen.user %>


            <%= link_to "Edit this item", edit_item_path(item), class: 'edit-cart-button' %>
            <%= link_to "Delete this item", item_path(item), method: :delete, class: 'edit-cart-button' %>
            </div>
          </div>
          <% end %>
      </div>
  </div>
