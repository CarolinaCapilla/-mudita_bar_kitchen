<h2 class="ml-4"><%= @kitchen.name %></h2><p class="ml-4">by Marco White</p>
<div class="card-container">
<% @kitchen.items.each do |item| %>
	<div class="card">
		<div class="imgBox" >
   <%= cl_image_tag item.photo.key %>
		</div>
		<div class="details">
			<div class="textContent">
				<h3 class="card-header"><%= item.dish %></h3>
				<div class="price">£<%= item.price %></div>
			</div>
			<h4 class="ingredient-header">Ingredients</h4>
				<p class="ingredient-text"><%= item.ingredient %></p>
			<button><%= button_to 'Add to cart', line_items_path(item_id: item.id), class: 'btn btn-link' %></button>
		</div>

		<div class="description">
			<div class="icon"><i class="fas fa-info-circle"></i></div>
			<div class="contents">
				<h2>Allergens</h2>
        <p><%= item.allergen %></p>
        <h2>Description</h2>
        <p><%= item.description %></p>
      </div>
		</div>
	</div>
  <% end %>
</div>

<div class="section">
  <div class="wrapper w-container">
    <div class="section-header-wrapper">
      <div class="sub-header">Menu</div>
      <h2>Breakfast</h2>
      <div class="divider"></div>
    </div>
      <div class="menu-grid-item">
          <% @kitchen.items.each do |item| %>
          <div class="menu-grid-card">
            <div class=menu-grid-image>
              <%= cl_image_tag item.photo.key %>
            </div>
            <div class="menu-info w-clearfix">
              <div class="menu-info-main">
                <div class="menu-name"><%= item.dish %></div>
                <div class="menu-dots-line"></div>
                <div class="menu-price">
                  <div>£</div>
                  <div><%= item.price %></div>
                </div>
              </div>
              <div class="menu-ingredients">
                <%= item.description %>
              </div>
              <div class="menu-more w-clearfix">
                <div class="badge menu-new-badge"></div>
                <a href="#" class="badge menu-item-tooltip w-inline-block">
                  <div class="tooltip">
                    <div>Vegan</div>
                    <div class="tooltip-arrow"></div>
                  </div>
                  <div>V</div>
                </a>
                <a href="#" class="badge menu-item-tooltip w-inline-block">
                  <div class="tooltip">
                    <div>Kosher</div>
                    <div class="tooltip-arrow"></div>
                  </div>
                  <div>K</div>
                </a>
                <a href="#" class="badge menu-item-tooltip w-inline-block">
                  <div class="tooltip">
                    <div>Spicy</div>
                    <div class="tooltip-arrow"></div>
                  </div>
                  <div>S</div>
                </a>
              </div>
            </div>
            </div>
          <% end %>
      </div>
      <div class="w-dyn-empty">
        <div>No items found.</div>
      </div>
  </div>
</div>


  <div class="ml-4">
    <% if current_user == @kitchen.user %>
    <%= link_to "Edit kitchen", edit_kitchen_path(@kitchen) %>
  | <%= link_to "Delete kitchen", kitchen_path(@kitchen), method: :delete, data: {confirm:"Are you sure you want to delete this?"} %>
  <% end %>
  <% if current_user == (current_user.chef == false) %>
  | <%= link_to 'Leave a review',  new_kitchen_review_path(@kitchen) %>
  <% end %>
  | <%= link_to "Add an item", new_kitchen_item_path(@kitchen) %>
  </div>


