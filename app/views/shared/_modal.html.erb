<button type="button" class="main-button-green" data-toggle="modal" data-target="#exampleModalCenter">
  Confirm order
</button>

<!-- Modal -->

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Your Order #<%= @order.id %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'shared/payment_form' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="main-button-danger" data-dismiss="modal">Close</button>
        <button class="payment-modal main-button-green">Pay</button>
      </div>
    </div>
  </div>
</div>
