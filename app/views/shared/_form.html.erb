<div class="bg-section-kitchen page-hero-section create-item-hero">
  <div class="wrapper w-container">
    <h1 class="page-hero-header">Your Menu</h1>
  </div>
</div>


<div class="section pattern-section no-top-padding">
  <div class="wrapper w-container">
    <div class="reservation w-form">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-12">
            <div class="form-item">
              <h2 class="text-center">Describe your dish</h2>
              <%= simple_form_for [@kitchen, @item] do |f| %>
              <%= f.input :dish %>
              <%= f.input :ingredient %>
              <%= f.input :description %>
              <%= f.input :category, collection: Item::CATEGORIES %>
              <div class="form-group">
                <label class="text required" for="item_description">Allergens <abbr title="required" data-children-count="0">*</abbr></label>
                <br>

                <input type="hidden" name="post[category_ids][]" value="">
                <div class="category-choices">
                  <% Item::ALLERGENS.each do |allergen| %>
                    <input type="checkbox" class="hidden" value="<%= "#{allergen}" %>" name="item[allergen][]" id="item_allergen_<%= "#{allergen}" %>">
                    <label class="category-choice" for="item_allergen_<%= "#{allergen}" %>">
                      <%= allergen %>
                      <i class="fa fa-check"></i>
                    </label>
                  <% end %>
                </div>
              </div>
              <%= f.input :price, placeholder: "Price in Â£" %>
              <%= f.input :photo, as: :file %>
              <%= f.button :submit%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
     </div>
  </div>
</div>


