<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="form-item">
        <h2 class="text-center">New Menu Item</h2>
        <%= simple_form_for @item do |f| %>
        <%= f.input :dish %>
        <%= f.input :ingredient %>
        <%= f.input :description %>
        <%= f.input :category, collection: Item::CATEGORIES, as: :check_boxes %>
        <%= f.input :allergen, collection: Item::ALLERGENS, as: :check_boxes %>
        <%= f.input :price, placeholder: "Price in Â£" %>
        <%= f.button :submit, class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
